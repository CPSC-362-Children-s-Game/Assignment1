string random_word(const string a[], const int x){
string randomword;
  
int i = rand() % x + 1;
cout << "index = " << i << endl;
randomword = a[rand() % x];
cout << "random word = " << a[i] << endl;
randomword= a[i];
return randomword;
  
}


